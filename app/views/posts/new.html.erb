<%= stylesheet_link_tag "new", "data-turbo-track": "reload" %>

<div class="container h-100">
    		<div class="row h-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2 mb-4">画像を投稿しよう!</h1>
							<p class="lead mb-4">
								おもちゃの画像1枚とおすすめ理由を記載して投稿してください。
							</p>
						</div>

            <%= form_with(model: @post, local: true) do |form| %>
            
            <%#%=form.に下記置き換える。Active StorageとActive Hashを導入してから%>
						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
									<form>
										<div class="form-group">
											<input type="file" class="custom-file-input" id="customFile" name="custom[file][]" multiple>
                      <label class="custom-file-label" for="customFile" data-browse="参照">←画像を選択して下さい。</label>
										</div>
                    <div class="form-group">
											<label>対象年齢</label>
											<input class="form-control" type="password" name="password">
										</div>
										<div class="form-group">
											<label for="textarea1">コメント（おすすめ理由）:</label>
                      <textarea id="textarea1" class="form-control form-control-lg custom-height"></textarea>
										</div>
										<div class="text-center mt-3">
											<a href="index.html" class="btn btn-lg btn-primary">投稿する</a>
											<!-- <button type="submit" class="btn btn-lg btn-primary">Sign up</button> -->
            <% end %>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>