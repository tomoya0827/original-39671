<%= stylesheet_link_tag "new", "data-turbo-track": "reload" %>

<body class="bg-light">
    <div class="container h-100">
    		<div class="row h-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2 mb-5">投稿を編集しよう</h1>
						</div>

            <%= form_with model: @post, url: post_path(@post), method: :patch, local: true do |f| %>
						<%= render 'layouts/error_messages', model: f.object %>
						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
									<form>
										<div class="form-group ">
										<div id="previews"></div>
                      <%= f.file_field :image, id: "post-image", class: "custom-file-input" %>
                      <label class="custom-file-label" for="post-image" data-browse="参照">←画像を選択して下さい。</label>
                      <label class=mt-2>※ 画像を変更する場合のみファイル選択が必要です。</label>
                    </div>
                    <div class="form-group mt-3">
                      <%= f.label :target_age_id, "対象年齢" %>
                      <%= f.collection_select(:target_age_id, TargetAge.all, :id, :name, {}, { class: "form-select" }) %>
                    </div>
                    <div class="form-group mt-3">
                    <%= f.label :explanatory_text, "コメント（おすすめ理由）" %>
                    <%= f.text_area :explanatory_text, id: "textarea1", class: "form-control form-control-lg custom-height" %>
										</div>
										<div class="text-center mt-3">
											<%= f.submit "編集する", class: "btn btn-lg btn-primary" %>
            <% end %>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
</body>