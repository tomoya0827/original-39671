<%= stylesheet_link_tag "new", "data-turbo-track": "reload" %>

<div class="container h-100">
    		<div class="row h-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

            <%= form_with model: current_user, local: true do |f|%>
            <%= render "devise/shared/error_messages", resource: current_user %>

						<div class="text-center mt-4">
							<h1 class="h2">Edit Account</h1>
							<p class="lead">
								アカウントの編集
							</p>
						</div>

						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
									<form>
										<div class="form-group">
											<%= f.label :nickname %>
											<%= f.text_field :nickname, class: "form-control form-control-lg", placeholder: "Enter your name" %>
										</div>
										<div class="form-group">
											<%= f.label :email %>
											<%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Enter your email" %> 
										</div>
										<div class="text-center mt-3">
											<%= f.submit "Edit Account", class: "btn btn-lg btn-primary" %>
										</div>
									</form>
								</div>
							</div>
						</div>
          <% end %>
					</div>
				</div>
			</div>
		</div>
