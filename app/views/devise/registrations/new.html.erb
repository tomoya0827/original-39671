<%= stylesheet_link_tag "new", "data-turbo-track": "reload" %>

<body class="bg-light">
    <div class="container h-100">
    		<div class="row h-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

            <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

						<div class="text-center mt-4">
							<h1 class="h2">Create Account</h1>
							<p class="lead">
								必要事項を入力して新規アカウントの作成を行おう!
							</p>
						</div>

						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
									<form>
										<div class="form-group">
											<%= f.label :nickname %>
											<%= f.text_field :nickname, class: "form-control form-control-lg", placeholder: "Enter your nickname" %>
										</div>
										<div class="form-group mt-2">
											<%= f.label :email %>
											<%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Enter your email" %> 
										</div>
										<div class="form-group mt-2">
										  <%= f.label :password %>
											<i>(英数字6文字以上)</i>
											<%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg", placeholder: "Enter password" %>
										</div>
										<div class="form-group mt-2">
										  <%= f.label :password_confirmation %>
											<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg", placeholder: "Enter password confirmation" %>
										</div>
										<div class="text-center mt-3">
											<%= f.submit "Create Account", class: "btn btn-lg btn-primary" %>
										</div>
									</form>
								</div>
							</div>
						</div>
          <% end %>
					</div>
				</div>
			</div>
		</div>
</body>
